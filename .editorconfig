# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space

# JavaScript
[*.js]
indent_style = space
indent_size = 2

# TypeScript
[*.ts]
indent_style = space
indent_size = 2

# TypeScript React
[*.tsx]
indent_style = space
indent_size = 2

# CSS
[*.css]
indent_style = space
indent_size = 2

# JSON
[*.json]
indent_style = space
indent_size = 2
